<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
		FontSize="24"
		FontFamily="Arial"
        Title="vdb" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
	<Grid>
		<StackPanel Name="AuthPanel" Height="400" Width="300" Orientation="Horizontal" Background="LightGray">
			<StackPanel Margin="25,50,25,0" Width="250" Name="LoginMenu" Orientation="Vertical">
				<Label>Email</Label>
				<TextBox Width="250" Padding="3" Name="EmailTB" />
				<Label>Password</Label>
				<TextBox Width="250" Padding="3" Name="PasswordTB"/>
				<Button Margin="0,10,0,0" Width="250" Padding="5" Name="LoginBT" Click="LoginBT_Click">
					log in
				</Button>
				<Button Width="200" FontSize="20" Padding="3" FontFamily="Arial" Margin="25,10,25,0" Name="asGuestBT" Click="asGuestBT_Click" IsEnabled="False" ToolTip="in development">
					continue as guest
				</Button>
				<TextBlock Margin="0,10,0,0" TextWrapping="Wrap" MaxHeight="100" Name="AuthErrorTB"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
